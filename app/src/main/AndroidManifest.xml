<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.chefster">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".ChefsterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProgressActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="da9751a3b965b8ddd38cc3e6889cb13866c0e421" />

        <activity android:name=".activities.CookingActivity" />
        <activity android:name=".activities.ShareActivity" />
        <activity android:name=".activities.MealLaunchActivity" />
        <activity
            android:name=".activities.DishListActivity"
            android:label="@string/title_activity_dish_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.BaseActivity"></activity>
        <activity android:name=".activities.DishDetailsActivity"></activity>
    </application>

</manifest>