<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        app:titleTextColor="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/main_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_chosen_dishes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:apps="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_tools_needed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                apps:cardElevation="2dp"
                apps:cardCornerRadius="4dp"
                android:layout_marginBottom="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_medium"
                    android:padding="6dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="@string/tools_needed"
                        />

                    <TextView
                        android:id="@+id/text_view_list_tools_needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:id="@+id/text_view_tools_warning"
                        style="@style/launch_meal_textview"
                        android:textColor="@android:color/white"
                        android:text="@string/tools_warning"
                        android:visibility="gone"
                        tools:visibility="visible"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:apps="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                apps:cardElevation="2dp"
                apps:cardCornerRadius="4dp"
                android:layout_marginBottom="6dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_medium"
                    android:padding="6dp"
                    >

                    <TextView
                        android:id="@+id/text_view_regular_time_calc_label"
                        style="@style/launch_meal_textview_title"
                        android:text="@string/regular_time_calc"
                        />

                    <TextView
                        android:id="@+id/text_view_regular_time_calc"
                        style="@style/launch_meal_textview_content"
                        android:text="2h35m"
                        android:layout_alignBaseline="@id/text_view_regular_time_calc_label"
                        android:layout_toEndOf="@id/text_view_regular_time_calc_label"
                        android:layout_marginStart="8dp"
                        />

                    <TextView
                        android:id="@+id/text_view_app_time_calc_label"
                        style="@style/launch_meal_textview_title"
                        android:text="@string/app_time_calc"
                        android:layout_below="@id/text_view_regular_time_calc_label"
                        />

                    <TextView
                        android:id="@+id/text_view_app_time_calc"
                        style="@style/launch_meal_textview_content"
                        android:text="1h35m"
                        android:layout_alignBaseline="@id/text_view_app_time_calc_label"
                        android:layout_below="@id/text_view_regular_time_calc_label"
                        android:layout_toEndOf="@id/text_view_app_time_calc_label"
                        android:layout_marginStart="8dp"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Bottom padding to leave room for the sticky Button -->
            <View
                android:id="@+id/meal_launch_bottom_padding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sticky_button_height"
                />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarFullScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/button_start_cooking"
        android:layout_alignParentBottom="true"
        android:text="@string/lets_go"
        style="@style/start_cooking_sticky_button"
        />

</RelativeLayout>