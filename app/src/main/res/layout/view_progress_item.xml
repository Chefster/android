<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_step_item"
    android:background="@drawable/white_background_black_border"
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:paddingBottom="16dp"
    android:layout_marginBottom="8dp"
    >

    <TextView
        android:id="@+id/text_view_step_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:background="@android:color/black"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:text="PREP"
        />

    <TextView
        android:id="@+id/text_view_dish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_toEndOf="@id/text_view_step_type"
        tools:text="Shakshuka"
        />

    <TextView
        android:id="@+id/text_view_step_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:textSize="18sp"
        android:alpha="0.5"
        android:layout_toEndOf="@id/text_view_step_type"
        android:layout_below="@id/text_view_dish_title"
        tools:text="Dice the tomatoes and add it to the pan together with the diced onions and garlic"
        />

    <Button
        android:id="@+id/button_step_details"
        android:text="@string/show_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>