<android.support.v7.widget.CardView android:id="@+id/cardlist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/ivReviewProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_avatar_placeholder_large"
            android:layout_marginEnd="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/tvReviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toEndOf="@+id/ivReviewProfile"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="4dp"
            tools:text="Hillary Clinton"
            />

        <TextView
            android:id="@+id/tvReviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            tools:text="mm/dd/yyyy" />

        <RatingBar
            android:id="@+id/rbReview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:layout_toEndOf="@+id/ivReviewProfile"
            android:layout_below="@+id/tvReviewName" />

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/rbReview"
            android:layout_toEndOf="@id/ivReviewProfile"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            tools:text="Great meal, loved it, and it was super super easy to make! I recommend anyone to try it. Thanks Chefster!" />

    </RelativeLayout>
</android.support.v7.widget.CardView>