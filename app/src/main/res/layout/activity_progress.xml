<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal"
        tools:context="com.codepath.chefster.activities.ProgressActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/light_blue_translucent"
                android:text="@string/active"
                android:padding="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white_translucent"
                android:text="@string/future"
                android:padding="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/light_orange_translucent"
                android:text="@string/done"
                android:padding="4dp"
                />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/button_finish_cooking"
        android:layout_alignParentBottom="true"
        android:text="@string/finish_cooking"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/start_cooking_sticky_button"
        />

</RelativeLayout>
