<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/linear_layout_main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        tools:context="com.codepath.chefster.activities.ProgressActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:cardElevation="2dp"
            apps:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:id="@+id/text_view_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textSize="22sp"
                android:textAppearance="@style/bold_text"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="Shakshuka"
                />

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:cardElevation="2dp"
            apps:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:id="@+id/text_view_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textSize="22sp"
                android:textAppearance="@style/bold_text"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="Shakshuka"
                />

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            apps:cardElevation="2dp"
            apps:cardCornerRadius="4dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:id="@+id/text_view_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textSize="22sp"
                android:textAppearance="@style/bold_text"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="Shakshuka"
                />

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/horiz_scroll_view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linear_layout_dish_progress_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/horiz_transparent_divider"
                />

        </HorizontalScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/button_finish_cooking"
        android:layout_alignParentBottom="true"
        android:text="@string/finish_cooking"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/start_cooking_sticky_button"
        />

</RelativeLayout>
