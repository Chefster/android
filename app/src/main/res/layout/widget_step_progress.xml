<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_progress_item"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    apps:cardElevation="4dp"
    apps:cardCornerRadius="4dp"
    android:layout_margin="6dp"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative_layout_step_item"
        android:background="@color/white_translucent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:paddingBottom="16dp"
        >

        <TextView
            android:id="@+id/text_view_step_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:background="@android:color/black"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="PREP"
            />

        <TextView
            android:id="@+id/text_view_time_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text_view_step_type"
            android:padding="4dp"
            android:background="@android:color/black"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="6 mins"
            />

        <TextView
            android:id="@+id/text_view_dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_toEndOf="@id/text_view_step_type"
            tools:text="Shakshuka"
            />

        <TextView
            android:id="@+id/text_view_step_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="18sp"
            android:alpha="0.5"
            android:layout_toEndOf="@id/text_view_time_duration"
            android:layout_below="@id/text_view_dish_title"
            tools:text="Dice the tomatoes and add it to the pan together with the diced onions and garlic"
            />

        <RelativeLayout
            android:id="@+id/relative_layout_progress_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            >

            <Button
                android:text="@string/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_finish_step"
                />

            <Button
                android:text="@string/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_play_pause_step"
                android:layout_toEndOf="@id/button_finish_step"
                android:layout_toStartOf="@+id/button_step_details"
                />

            <Button
                android:id="@+id/button_step_details"
                android:text="@string/show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
