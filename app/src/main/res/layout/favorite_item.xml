<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/ivMealImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="DishImage"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMealImage"
            android:textColor="#000"
            android:textSize="22sp"
            tools:text="Pasta with white sauce" />

        <!--<com.codepath.chefster.utils.CircleAnimatedCheckBox-->
        <!--android:id="@+id/cb"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:button="@drawable/checkbox_selector_light"-->
        <!--android:focusable="false"-->
        <!--android:scaleX="1.20"-->
        <!--android:scaleY="1.20"-->
        <!--app:cb_color="#CC33b5e5"-->
        <!--app:cb_pressed_ring_width="2dp"/>-->

        <CheckBox
            android:id="@+id/cbSelectDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_toRightOf="@id/ivMealImage"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20sp"
            tools:text="Pasta, Milk, Floor, Bell Peppers, Butter, Cheese, Salt, Garlic, " />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvSummary"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivMealImage"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                tools:text="15:00" />

            <TextView
                android:id="@+id/tvMealRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                tools:text="4.5" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>