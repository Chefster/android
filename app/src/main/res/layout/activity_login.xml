<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/sign_in_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        />

    <TextView
        android:id="@+id/sign_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sign_in"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_email"
        android:layout_below="@+id/sign_in_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="104dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/sign_in_title"
        android:layout_toEndOf="@+id/text_view_email"
        android:layout_marginStart="16dp"
        android:layout_marginTop="89dp"
        android:id="@+id/edit_text_email_input"
        android:hint="user@gmail.com"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_text_password_input"
        android:layout_below="@+id/edit_text_email_input"
        android:layout_alignStart="@+id/edit_text_email_input"
        android:hint="Password..."
        />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/edit_text_password_input"
        android:layout_alignBottom="@+id/edit_text_password_input"
        android:layout_toStartOf="@+id/edit_text_email_input"
        />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sign_up"
        android:layout_below="@+id/edit_text_password_input"
        android:layout_alignStart="@+id/edit_text_password_input"
        android:layout_marginTop="17dp"
        />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_log_in"
        android:layout_alignBaseline="@+id/button_sign_up"
        android:layout_alignBottom="@+id/button_sign_up"
        android:layout_alignEnd="@+id/edit_text_password_input"
        />

</RelativeLayout>
