<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    apps:cardElevation="4dp"
    apps:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/meal_launch_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/image_view_dish_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            tools:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/text_view_dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_dish_image"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            style="@style/launch_meal_textview_title"
            tools:text="Dish name"
            />

        <TextView
            android:id="@+id/text_view_dish_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_dish_image"
            android:layout_below="@id/text_view_dish_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            style="@style/launch_meal_textview_content"
            tools:text="Est. 40 minutes. Tools:Pan, Pot"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>