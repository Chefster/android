<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/meal_launch_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    >

    <ImageView
        android:id="@+id/image_view_dish_image"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        tools:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/text_view_dish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_toEndOf="@id/image_view_dish_image"
        android:layout_marginStart="4dp"
        tools:text="Shakshuka"
        />

    <TextView
        android:id="@+id/text_view_dish_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@id/image_view_dish_image"
        android:layout_below="@id/text_view_dish_title"
        android:layout_marginStart="4dp"
        tools:text="Est. 40 minutes. Tools:Pan, Pot"
        />

</RelativeLayout>